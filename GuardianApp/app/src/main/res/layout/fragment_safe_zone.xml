<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SafeZoneFragment">

    <fragment
        android:id="@+id/fence_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/safeZoneBtn"/>

    <Button
        android:id="@+id/safeZoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/safe_zone_btn_text"
        app:layout_constraintTop_toBottomOf="@id/fence_map"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>